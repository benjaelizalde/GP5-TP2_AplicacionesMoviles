<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Si está seleccionado, cambia el color del texto -->
    <item android:state_checked="true" android:color="@color/colorOnPrimary" />
